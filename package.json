{
  "name": "Asset Manager",
  "version": "1.0.0",
  "description": "app for Roblox audio and decal mass uploader",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\" \"npm run dev:server\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 -t 30000 && npm run build:electron && electron .",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:server && npm run build:electron && vite build && electron-builder",
    "build:win": "npm run build:server && npm run build:electron && vite build && electron-builder --win",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:server": "cd server && npm run build",
    "preview": "vite preview",
    "install:server": "cd server && npm install"
  },
  "keywords": [
    "roblox",
    "uploader",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juntttttttt/Asset-Manager.git"
  },
  "build": {
    "appId": "com.roblox.uploader",
    "productName": "Asset Manager",
    "publish": {
      "provider": "github",
      "owner": "j_unt",
      "repo": "Asset-Manager"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/*.{md,ts,map}",
      "!node_modules/.cache",
      "!node_modules/.bin"
    ],
    "extraFiles": [
      {
        "from": "server/dist",
        "to": "server/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "server/package.json",
        "to": "server/package.json"
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Asset Manager"
    },
    "portable": {
      "artifactName": "${productName}.${ext}"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1"
  }
}
